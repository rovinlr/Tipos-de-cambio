<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_currency_rate_provider_view_form_bccr" model="ir.ui.view">
        <field name="name">res.currency.rate.provider.form.bccr</field>
        <field name="model">res.currency.rate.provider</field>
        <field name="inherit_id" ref="currency_rate_live.res_currency_rate_provider_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='service']" position="after">
                <field name="bccr_name" invisible="service != 'bccr'"/>
                <field name="bccr_email" invisible="service != 'bccr'"/>
                <field name="bccr_token" invisible="service != 'bccr'"/>
                <field name="bccr_usd_indicator" invisible="service != 'bccr'"/>
                <field name="bccr_eur_indicator" invisible="service != 'bccr'"/>
            </xpath>
        </field>
    </record>
</odoo>
