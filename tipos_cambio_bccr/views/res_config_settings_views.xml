<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_hacienda_rates" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hacienda.rates</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Tipo de Cambio Hacienda" name="hacienda_currency_rates_block">
                    <setting id="hacienda_rate_auto_update_setting" string="Actualizar automáticamente">
                        <field name="hacienda_rate_auto_update"/>
                    </setting>
                    <setting id="hacienda_rate_interval_setting" string="Intervalo (días)">
                        <field name="hacienda_rate_interval_number"/>
                    </setting>
                    <setting id="hacienda_rate_last_sync_setting" string="Última sincronización">
                        <field name="hacienda_rate_last_sync" readonly="1"/>
                    </setting>
                    <setting id="hacienda_rate_run_now_setting" string="Sincronizar ahora">
                        <button name="action_update_hacienda_rates_now"
                                type="object"
                                string="Actualizar ahora"
                                class="btn-primary"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
