<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_bccr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.bccr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="currency_rate_live.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_provider']" position="after">
                <field name="bccr_name" invisible="currency_provider != 'bccr'"/>
                <field name="bccr_email" invisible="currency_provider != 'bccr'"/>
                <field name="bccr_token" password="True" invisible="currency_provider != 'bccr'"/>
                <field name="bccr_usd_indicator" invisible="currency_provider != 'bccr'"/>
                <field name="bccr_eur_indicator" invisible="currency_provider != 'bccr'"/>
            </xpath>
        </field>
    </record>
</odoo>
